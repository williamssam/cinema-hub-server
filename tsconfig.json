{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "global.d.ts"],
	"exclude": ["node_modules/**"]
}
