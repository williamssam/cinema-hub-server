{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*",
		"global.d.ts",
		"src/config",
		"src/utils",
		"src/middlewares",
		"src/exceptions",
		"src/db",
		"src/server.ts",
		"scripts/migrate.mjs"
	],
	"exclude": ["node_modules/**"]
}
